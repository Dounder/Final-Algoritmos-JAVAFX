            <VBox prefHeight="166.0" prefWidth="250.0">
               <children>
                  <Label text="ID:" />
                  <TextField fx:id="idInput" prefHeight="30.0" prefWidth="235.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                  </TextField>
                  <Label text="Nombre:" />
                  <TextField fx:id="nameInput">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                  </TextField>
                  <Label text="Precio:" />
                  <TextField fx:id="priceInput">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                  </TextField>
               </children>
            </VBox>
            <VBox prefHeight="166.0" prefWidth="250.0">
               <children>
                  <Label text="Stock:" />
                  <TextField fx:id="stockInput" prefHeight="30.0" prefWidth="147.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                  </TextField>
                  <Label text="Descripcion" />
                  <TextArea fx:id="descriptionInput" prefHeight="200.0" prefWidth="200.0">
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                  </TextArea>
               </children>
            </VBox>
