<AnchorPane onMouseClicked="#rowSelected" prefHeight="715.0" prefWidth="1000.0" style="-fx-background-color: #e7e7de;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.controllers.ProductController">
