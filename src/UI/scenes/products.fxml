         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <TableView fx:id="productTable" layoutX="14.0" layoutY="49.0" onMouseClicked="#rowSelected" prefHeight="476.0" prefWidth="971.0">
        <columns>
          <TableColumn fx:id="id" prefWidth="42.13330268859863" text="ID" />
          <TableColumn fx:id="name" prefWidth="241.8667106628418" text="Nombre" />
            <TableColumn fx:id="price" prefWidth="113.33331298828125" text="Precio" />
            <TableColumn fx:id="stock" prefWidth="71.46661376953125" text="Stock" />
            <TableColumn fx:id="description" prefWidth="242.13330078125" text="Descripcion" />
            <TableColumn fx:id="idProvider" prefWidth="83.199951171875" text="Proveedor ID" />
            <TableColumn fx:id="nameProvider" prefWidth="179.2000732421875" text="Proveedor" />
        </columns>
      </TableView>
      <HBox layoutX="14.0" layoutY="543.0" prefHeight="160.0" prefWidth="971.0" spacing="15.0">
